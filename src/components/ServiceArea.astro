---
import { MapPin } from '@lucide/astro';

const cities = [
  "Phoenix", "Scottsdale", "Tempe", "Mesa", "Gilbert", 
  "Peoria", "Glendale", "Surprise", "Chandler", "Avondale",
  "Goodyear", "Buckeye", "Paradise Valley", "Cave Creek", "Carefree"
];
---

<section id="areas" class="py-24 bg-brand-grey">
  <div class="container mx-auto px-6 md:px-12">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      
      <div class="lg:w-1/2">
        <div class="inline-block bg-brand-orange/10 text-brand-orange px-4 py-1 rounded text-sm font-bold mb-4">SERVING THE ENTIRE VALLEY</div>
        <h2 class="text-4xl md:text-5xl font-black mb-8">Where We <span class="text-brand-orange">Operate</span></h2>
        
        <p class="text-lg text-gray-700 mb-8 leading-relaxed">
          Matt's Mobile Mechanic brings the shop to you across the entire Greater Phoenix area. Whether you're stranded at home in Peoria or need fleet service in Gilbert, weâ€™ve got you covered.
        </p>

        <div class="grid grid-cols-2 sm:grid-cols-3 gap-y-4 gap-x-6">
          {cities.map(city => (
            <div class="flex items-center gap-2 text-brand-black">
              <div class="w-2 h-2 rounded-full bg-brand-orange"></div>
              <span class="font-medium">{city}</span>
            </div>
          ))}
        </div>
        
        <div class="mt-12 p-6 bg-white border-l-4 border-brand-orange rounded-r-xl shadow-lg">
          <p class="font-bold text-xl mb-1 flex items-center gap-2">
            <MapPin class="text-brand-orange" />
            No Travel Fees!
          </p>
          <p class="text-gray-600">Give us a call to confirm your location and get a technician dispatched.</p>
        </div>
      </div>

      <div class="lg:w-1/2 w-full aspect-square rounded-3xl overflow-hidden">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d425345.0295639492!2d-112.07404!3d33.4484!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1704067200000!5m2!1sen!2sus"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Greater Phoenix Area Service Map"
          class="rounded-3xl"
        ></iframe>
      </div>

    </div>
  </div>
</section>
