---
import { Phone, MessageSquare, Mail } from '@lucide/astro';
---

<footer class="bg-brand-black text-brand-white pt-20 pb-10">
  <div class="container mx-auto px-6 md:px-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-16">
      
      <!-- Brand & Info -->
      <div class="col-span-1 lg:col-span-1">
        <a href="/" class="mb-6 block">
          <img src="/logo.jpg" alt="Matt's Mobile Mechanic" class="h-12" />
        </a>
        <p class="text-brand-grey/60 leading-relaxed">
          The #1 mobile mechanic service in Phoenix. Providing dealership-quality repairs with the convenience of on-site service.
        </p>
      </div>

      <!-- Services List -->
      <div>
        <h4 class="text-brand-orange font-bold uppercase tracking-widest text-sm mb-6">Repair Services</h4>
        <ul class="space-y-3 text-brand-grey/80">
          <li>Computerized Diagnostics</li>
          <li>Brake Pad & Rotor Repair</li>
          <li>Oil & Filter Changes</li>
          <li>Battery Testing & Replacement</li>
          <li>Engine Management & Sensors</li>
          <li>Fleet Maintenance Programs</li>
        </ul>
      </div>

      <!-- Quick Contact -->
      <div>
        <h4 class="text-brand-orange font-bold uppercase tracking-widest text-sm mb-6">Contact Us</h4>
        <ul class="space-y-4">
          <li>
            <a href="tel:15167288284" class="flex items-center gap-3 hover:text-brand-orange transition-colors text-lg font-bold">
              <Phone size={20} class="text-brand-orange" />
              (516) 728-8284
            </a>
          </li>
          <li>
            <a href="sms:15167288284" class="flex items-center gap-3 hover:text-brand-orange transition-colors">
              <MessageSquare size={20} class="text-brand-orange" />
              Text a Technician
            </a>
          </li>
          <li class="flex items-center gap-3 text-brand-grey/80">
            <Mail size={20} class="text-brand-orange" />
            service@mattsmobile.com
          </li>
        </ul>
      </div>

      <!-- Hours -->
      <div>
        <h4 class="text-brand-orange font-bold uppercase tracking-widest text-sm mb-6">Service Hours</h4>
        <ul class="space-y-3 text-brand-grey/80">
          <li class="flex justify-between"><span>Mon - Fri:</span> <span>7:00 AM - 6:00 PM</span></li>
          <li class="flex justify-between"><span>Saturday:</span> <span>8:00 AM - 4:00 PM</span></li>
          <li class="flex justify-between"><span>Sunday:</span> <span class="text-brand-orange">Emergency Only</span></li>
        </ul>
      </div>

    </div>

    <div class="border-t border-brand-white/10 pt-10 flex flex-col md:flex-row justify-between items-center gap-6 text-sm text-brand-grey/40">
      <p>&copy; {new Date().getFullYear()} Matt's Mobile Mechanic LLC. All Rights Reserved.</p>
      <div class="flex gap-6">
        <a href="#" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-white transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
